@model TaskFlowModel
@{
    ViewData["Title"] = "Delete Task";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">Delete Task Confirmation</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        Are you sure you want to delete this task? This action cannot be undone.
                    </div>

                    <div class="task-details mt-4">
                        <h4 class="mb-3">Task Details:</h4>
                        <dl class="row">
                            <dt class="col-sm-3">Client Name</dt>
                            <dd class="col-sm-9">@Model.ClientName</dd>

                            <dt class="col-sm-3">Permit</dt>
                            <dd class="col-sm-9">@Model.Permit</dd>

                            <dt class="col-sm-3">Priority</dt>
                            <dd class="col-sm-9">
                                <span class="badge @(Model.Priority == "Urgent" ? "bg-danger" : 
                                                                                         Model.Priority == "Slightly Important" ? "bg-warning text-dark" : 
                                                                                         "bg-secondary")">
                                    @Model.Priority
                                </span>
                            </dd>

                            <dt class="col-sm-3">Progress</dt>
                            <dd class="col-sm-9">
                                <div class="progress" style="height: 20px;">
                                    <div class="progress-bar @(Model.Progress == 0 ? "bg-secondary" : "bg-info")"
                                        role="progressbar" style="width: @(Model.Progress)%"
                                        aria-valuenow="@Model.Progress" aria-valuemin="0" aria-valuemax="100">
                                        @Model.Progress%
                                    </div>
                                </div>
                            </dd>

                            <dt class="col-sm-3">Date Issued</dt>
                            <dd class="col-sm-9">@Model.DateIssued.ToString("MMM dd, yyyy h:mm tt")</dd>
                        </dl>
                    </div>

                    <div class="text-center mt-4">
                        <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
                            <a href="@Url.Action("TaskFlow")" class="btn btn-secondary me-2">
                                <i class="bi bi-arrow-left me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash-fill me-1"></i>Delete Task
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>