@{
    ViewData["Title"] = "Task Flow Management";
}

<div class="container my-5">
    <h2 class="text-center mb-4">📋 Task Flow Management</h2>

    <!-- Top Bar -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <a href="@Url.Action("Archive", "Task")" class="btn btn-outline-secondary" aria-label="View archived tasks">
            <i class="bi bi-archive-fill"></i> View Archive
        </a>
    </div>

    <div class="row">
        <!-- Task List -->
        <div class="col-lg-8 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">🗂️ Current Task List</h5>
                </div>
                <div class="card-body p-0">
                    <table class="table table-hover mb-0" aria-describedby="taskListDescription">
                        <caption id="taskListDescription" class="visually-hidden">List of current client tasks with status and actions</caption>
                        <thead class="table-light">
                            <tr>
                                <th scope="col">Client</th>
                                <th scope="col">Permit</th>
                                <th scope="col">Requirements</th>
                                <th scope="col">Status</th>
                                <th scope="col">Priority</th>
                                <th scope="col">Issued</th>
                                <th scope="col" class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.Tasks != null && ViewBag.Tasks.Count > 0)
                            {
                                foreach (var task in ViewBag.Tasks)
                                {
                                    var progress = (int)task.Progress;
                                    var isZeroProgress = progress == 0;
                                    var progressBarClass = isZeroProgress ? "bg-secondary" : "bg-info";
                                    var progressLabel = isZeroProgress ? "No Progress" : $"{progress}%";

                                    <tr class="@GetPriorityClass(task.Priority)">
                                        <td>@task.ClientName</td>
                                        <td>@task.Permit</td>
                                        <td>
                                            @if (!string.IsNullOrWhiteSpace(task.Requirements))
                                            {
                                                var reqs = task.Requirements.Split(',', StringSplitOptions.RemoveEmptyEntries);
                                                <ul class="mb-0 ps-3">
                                                    @foreach (var req in reqs)
                                                    {
                                                        <li>@req.Trim()</li>
                                                    }
                                                </ul>
                                            }
                                            else
                                            {
                                                <span class="text-muted">None</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="d-flex flex-column align-items-start" style="min-width: 140px;">
                                                <div class="progress w-100" role="progressbar" aria-valuenow="@progress" aria-valuemin="0" aria-valuemax="100" title="@progressLabel" style="height: 24px;">
                                                    <div class="progress-bar @progressBarClass d-flex align-items-center justify-content-center" style="width: @progress%;">
                                                        <span class="fw-semibold text-white small">@progressLabel</span>
                                                    </div>
                                                </div>
                                                @if (isZeroProgress)
                                                {
                                                    <small class="text-muted mt-1">No progress yet</small>
                                                }
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-@GetPriorityBadge(task.Priority) text-uppercase" aria-label="Priority: @task.Priority">
                                                @task.Priority
                                            </span>
                                        </td>
                                        <td>@task.DateIssued.ToString("MMM dd, yyyy")</td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group" aria-label="Actions for task @task.Id">
                                                <a href="@Url.Action("EditTask", "Task", new { id = task.Id })" class="btn btn-sm btn-warning" title="Edit Task">
                                                    <i class="bi bi-pencil-square"></i>
                                                </a>
                                                <a href="@Url.Action("DeleteTask", "Task", new { id = task.Id })" class="btn btn-sm btn-danger" title="Delete Task" onclick="return confirm('Are you sure you want to delete this task?');">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                                <button type="button" class="btn btn-sm btn-success" title="Mark as Done" onclick="confirmDone(@task.Id)">
                                                    <i class="bi bi-check-circle"></i>
                                                </button>
                                            </div>
                                        </td>

                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7" class="text-center text-muted py-4">No tasks available.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Add Task Form -->
        <div class="col-lg-4">
            <div class="card shadow-sm sticky-form">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0 text-center">➕ Add New Task</h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="AddTask" asp-controller="Task" novalidate>
                        <div class="mb-3">
                            <label for="ClientName" class="form-label">Client Name</label>
                            <input type="text" name="ClientName" id="ClientName" class="form-control" placeholder="Enter client name" required aria-required="true" />
                        </div>

                        <div class="mb-3">
                            <label for="Permit" class="form-label">Permit</label>
                            <input type="text" name="Permit" id="Permit" class="form-control" placeholder="Enter permit" required aria-required="true" />
                        </div>

                        <div class="mb-3">
                            <label for="Requirements" class="form-label">Requirements</label>
                            <textarea name="Requirements" id="Requirements" class="form-control" rows="3" placeholder="Separate requirements with commas" required aria-required="true"></textarea>
                        </div>

                        <div class="mb-3">
                            <label for="Priority" class="form-label">Priority</label>
                            <select name="Priority" id="Priority" class="form-select" required aria-required="true" aria-describedby="priorityHelp">
                                <option value="" disabled selected>Select priority</option>
                                <option value="Normal">Normal</option>
                                <option value="Slightly Important">Slightly Important</option>
                                <option value="Urgent">Urgent</option>
                            </select>
                            <div id="priorityHelp" class="form-text">Choose the urgency level of the task.</div>
                        </div>

                        <button type="submit" class="btn btn-success w-100" aria-label="Add new task">Add Task</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Priority Styling Helper -->
@functions {
    public string GetPriorityClass(string priority)
    {
        return priority switch
        {
            "Normal" => "table-success",
            "Slightly Important" => "table-warning",
            "Urgent" => "table-danger",
            _ => ""
        };
    }

    public string GetPriorityBadge(string priority)
    {
        return priority switch
        {
            "Normal" => "success",
            "Slightly Important" => "warning",
            "Urgent" => "danger",
            _ => "secondary"
        };
    }
}

<!-- Confirm Done JS -->
<script>
    function confirmDone(taskId) {
        if (confirm("Mark this task as done? It will be moved to the archive.")) {
            window.location.href = "/Task/MarkAsDone/" + taskId;
        }
    }
</script>

<style>
    /* Sticky form for better usability */
    .sticky-form {
        position: sticky;
        top: 20px;
        z-index: 10;
    }

    /* Progress bar height and font */
    .progress {
        height: 24px;
    }

    /* Reduce color saturation for priority rows for subtlety */
    .table-success {
        background-color: #d4edda !important;
    }

    .table-warning {
        background-color: #fff3cd !important;
    }

    .table-danger {
        background-color: #f8d7da !important;
    }

    /* Progress bar text styling */
    .progress-bar {
        font-weight: 600;
        font-size: 0.875rem;
    }
</style>
