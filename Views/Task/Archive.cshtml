@{
    ViewData["Title"] = "Task Archive";
}

<div class="container mt-4">
    <h2 class="text-center"><i class="bi bi-archive"></i> Archived Tasks</h2>

    <div class="d-flex justify-content-between mb-3">
        <a href="@Url.Action("TaskFlow", "Task")" class="btn btn-primary">
            <i class="bi bi-arrow-left-circle"></i> Back to Task Flow
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Client Name</th>
                    <th>Permit</th>
                    <th>Requirements</th>
                    <th>Priority</th>
                    <th>Date Issued</th>
                    <th>Date Completed</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var task in ViewBag.ArchivedTasks)
                {
                    <tr>
                        <td>@task.ClientName</td>
                        <td>@task.Permit</td>
                        <td>@task.Requirements</td>
                        <td>@task.Priority</td>
                        <td>@task.DateIssued.ToString("MMMM dd, yyyy HH:mm:ss")</td>
                        <td>
                            @if (task.DateCompleted != null)
                            {
                                @task.DateCompleted?.ToString("MMMM dd, yyyy HH:mm:ss")
                            }
                            else
                            {
                                <span class="text-muted">Not Completed</span>
                            }
                        </td>
                        <td>
                            <a href="@Url.Action("RestoreTask", "Task", new { id = task.Id })" class="btn btn-warning btn-sm">
                                <i class="bi bi-arrow-clockwise"></i> Not Done Yet
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

