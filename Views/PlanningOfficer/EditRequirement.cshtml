@model TestingDemo.Models.PermitRequirementModel

@{
    ViewData["Title"] = "Edit Requirement";
    var client = ViewBag.Client as TestingDemo.Models.ClientModel;
}

<div class="container">
    <div class="row">
        <div class="col-md-3">
            @await Html.PartialAsync("_PlanningOfficerNav")
        </div>
        <div class="col-md-9">
            <div class="row mb-4">
                <div class="col">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-action="Index">Dashboard</a></li>
                            <li class="breadcrumb-item"><a asp-action="PlanRequirements"
                                    asp-route-id="@Model.ClientId">Plan Requirements</a></li>
                            <li class="breadcrumb-item active">Edit Requirement</li>
                        </ol>
                    </nav>
                    <h2><i class="bi bi-pencil-square"></i> Edit Requirement</h2>
                </div>
            </div>

            <div class="row">
                <div class="col-md-8 mx-auto">
                    <div class="card shadow">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="bi bi-pencil"></i> Edit Requirement Details</h5>
                        </div>
                        <div class="card-body">
                            <form asp-action="EditRequirement" method="post">
                                <input type="hidden" asp-for="Id" />
                                <input type="hidden" asp-for="ClientId" />
                                <input type="hidden" asp-for="CreatedDate" />

                                <div class="mb-3">
                                    <label asp-for="RequirementName" class="form-label">Requirement Name</label>
                                    <textarea asp-for="RequirementName" class="form-control" rows="5"
                                        required></textarea>
                                    <span asp-validation-for="RequirementName" class="text-danger"></span>
                                    <div class="form-text text-muted">Enter each requirement on a separate line</div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Description" class="form-label">Description</label>
                                    <textarea asp-for="Description" class="form-control" rows="3" required></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="form-check">
                                            <input asp-for="IsRequired" class="form-check-input" />
                                            <label asp-for="IsRequired" class="form-check-label">Is Required</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-check">
                                            <input asp-for="IsCompleted" class="form-check-input" />
                                            <label asp-for="IsCompleted" class="form-check-label">Is Completed</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="d-flex justify-content-between">
                                    <a asp-action="PlanRequirements" asp-route-id="@Model.ClientId"
                                        class="btn btn-secondary">
                                        <i class="bi bi-arrow-left"></i> Back to Requirements
                                    </a>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-save"></i> Save Changes
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}